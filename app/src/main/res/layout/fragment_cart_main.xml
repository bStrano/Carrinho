<RelativeLayout android:id="@+id/cart_view_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


        <include
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:id="@+id/itemCart_emptyList"
            layout="@layout/test"/>

        <android.support.v7.widget.RecyclerView
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/cart_list_itemCarts"
            />

        <Button
            android:id="@+id/itemCart_btn_registerProduct"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="16dp"
            android:elevation="12dp"
            android:background="@drawable/ic_add_itemcart"
            />

        <Button
            android:id="@+id/itemCart_btn_registerRecipe"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="76dp"
            android:elevation="12dp"
            android:background="@drawable/ic_add_recipe"
            />

        <Button
            android:id="@+id/itemcart_btn_registerSimpleProduct"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="24dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="136dp"
            android:elevation="12dp"
            android:background="@drawable/ic_add_mini"
            />

