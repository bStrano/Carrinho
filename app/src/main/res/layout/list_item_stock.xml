<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">


        <RelativeLayout
            android:foreground="?android:selectableItemBackground"
            android:id="@+id/stock_itemList_foregroundView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="@dimen/list_paddingVertical"
            android:paddingBottom="@dimen/list_paddingVertical"
            android:background="#FAFAFA"
            android:layout_gravity="end"
            android:clickable="true"
            >

            <TextView
                android:id="@+id/stock_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome do Produto  "
                android:textSize="@dimen/list_textMediumSize"
                android:textColor="#25383C"
                android:layout_marginStart="@dimen/list_marginLeft"
                android:gravity="end"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/stock_actualAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="800"
                android:textColor="@color/colorPrimaryLight"
                android:textSize="@dimen/list_textSmallSize"
                android:layout_toStartOf="@id/stock_maxAmount"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/stock_maxAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000 "
                android:textSize="@dimen/list_textSmallSize"
                android:textColor="@color/colorPrimaryDark"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:layout_marginEnd="@dimen/list_marginRight"
                tools:ignore="HardcodedText" />


        </RelativeLayout>




    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@android:color/darker_gray"
        />

</LinearLayout>
