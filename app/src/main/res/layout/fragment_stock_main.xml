<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.stralom.compras.StockMain"
    android:orientation="vertical">


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:paddingBottom="-5dp"
        >

        <TextView
            android:id="@+id/stock_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Produto  "
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#25383C"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/stock_maxAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Atual"
                android:textSize="20sp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_alignParentEnd="true"
                android:paddingEnd="50dp"
                android:layout_alignParentRight="true"
                android:paddingRight="50dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/stock_actualAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Max"
                android:textSize="20sp"
                android:textColor="@color/colorPrimaryLight"
                android:layout_alignParentRight="true"
                android:textStyle="bold"
                />

        </RelativeLayout>





    </LinearLayout>
    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/list_itemStock"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>

        <Button
            android:id="@+id/btn_newItemStock"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="16dp"
            android:elevation="12dp"
            android:background="@drawable/ic_add_normal"
            />

        <!--<android.support.design.widget.FloatingActionButton-->
            <!--android:id="@+id/btn_newItemStock"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentBottom="true"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_margin="16dp"-->
            <!--android:backgroundTint="@color/colorPrimary"-->
            <!--android:src="@drawable/ic_add"/>-->

    </RelativeLayout>

</LinearLayout>
