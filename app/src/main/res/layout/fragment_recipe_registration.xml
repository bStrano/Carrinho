<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecipeRegistration">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar3"
            android:layout_width="match_parent"
            android:elevation="4dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            android:layout_marginBottom="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10px">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="190dp">

                <ImageView
                    android:id="@+id/form_recipe_image"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:src="@drawable/ic_recipe_image2"
                    android:background="@color/colorPrimaryLight"/>

                <Button
                    android:id="@+id/form_recipe_btn_newImage"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/ic_add_recipe_image"
                    android:layout_alignRight="@id/form_recipe_image"
                    android:layout_alignBottom="@id/form_recipe_image"
                    android:layout_alignEnd="@id/form_recipe_image"
                    android:layout_marginRight="6dp"
                    android:layout_marginBottom="-24dp"
                    />

            </RelativeLayout>


            <EditText
                android:id="@+id/form_recipe_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/formName"/>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adicionar Ingrediente"/>

                <Button
                    android:id="@+id/form_recipe_btn_newIngredient"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:text="+"
                    android:focusable="true"/>
            </LinearLayout>

            <ListView
                android:id="@+id/form_recipe_ingredients"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </ListView>


        </LinearLayout>
    </LinearLayout>


</FrameLayout>
