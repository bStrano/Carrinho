<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">


        <include layout="@layout/toolbar_registration"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="3dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="190dp">

                <ImageView
                    android:id="@+id/registration_recipe_image"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:src="@drawable/ic_recipe_image2"
                    android:background="@color/colorPrimaryLight"
                    android:contentDescription="@string/imageDescription_form_recipe"/>

                <Button
                    android:id="@+id/registration_recipe_btn_newImage"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/ic_add_recipe_image"
                    android:layout_alignBottom="@id/registration_recipe_image"
                    android:layout_alignEnd="@id/registration_recipe_image"
                    android:layout_marginEnd="6dp"
                    android:layout_marginBottom="-24dp"
                    />

            </RelativeLayout>


            <EditText
                android:id="@+id/registration_recipe_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/recipeName"
                android:inputType="textCapWords|textAutoCorrect"/>

            <Button
                android:id="@+id/registration_recipe_btn_addIngredient"
                android:layout_width="390dp"
                android:layout_height="60dp"
                android:layout_gravity="center"

                android:backgroundTint="@color/colorPrimaryDark"
                android:focusable="true"
                android:text="@string/registration_recipe_selectIngredient"
                android:textColor="@android:color/white" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/registration_recipe_ingredients"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </FrameLayout>


        </LinearLayout>
    </LinearLayout>
